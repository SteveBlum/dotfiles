{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-gemini-auth@latest"],
  "server": {
    "port": 3010,
    "hostname": "0.0.0.0"
  },
  "model": "github-copilot/gpt-5-mini",
  "small_model": "github-copilot/gpt-5-mini",
  "agent": {
    "answer": {
      "mode": "primary",
      "description": "Intended for answering general questions using web search",
      "model": "google/gemini-2.5-flash",
      "provider": "google",
      "prompt": "You are a helpful assistant that provides accurate and concise answers to user questions. If required, use web search to find up-to-date information. Always cite your sources.",
      "temperature": 0.2,
      "tools": {
        "*": false,
        "webfetch": true,
        "question": true
      }
    }
  },
  "provider": {
    "anthropic": {
      "models": {},
      "options": {
        "apiKey": "{env:ANTHROPIC_API_KEY}"
      }
    },
    "google": {
      "options": {
        "projectId": "{env:GOOGLE_CLOUD_PROJECT_ID}"
      }
    }
  },
  "theme": "tokyonight",
  "permission": {
    "bash": {
      "*": "allow",
      "git commit *": "deny",
      "git push": "deny",
      "git stage *": "deny",
      "rm *": "ask"
    }
  }
}
